{
  "manifest_version": 2,

  "name": "RBN",
  "description": "Keep up with all your review board items",
  "version": "1.0",

  "permissions": [
    "https://rb.corp.linkedin.com/api/",
    "notifications"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/lib/jquery-1.8.2.min.js", "js/lib/underscore.min.js", "js/setup.js", "js/notification.js"],
    "persistent": true
  },

  "update_url": "https://raw.github.com/krisk/rbn/master/updates.xml"
}